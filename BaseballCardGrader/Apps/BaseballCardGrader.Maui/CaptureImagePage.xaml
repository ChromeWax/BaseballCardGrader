<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:maui="clr-namespace:BaseballCardGrader.Maui"
             x:Class="BaseballCardGrader.Maui.CaptureImagePage"
             Title="Capture Images">
    
    <Grid RowDefinitions="7*,3*" Padding="10" RowSpacing="10">
        
        <!-- Camera preview (70% height) -->
        <toolkit:CameraView 
            x:Name="cameraView"
            Grid.Row="0"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <!-- Controls (30% height) -->
        <VerticalStackLayout Grid.Row="1" Spacing="10">

            <!-- Capture button -->
            <Button Text="Take Photos"
                    Clicked="OnTakeFourPhotosClicked"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />

            <!-- Preview of captured images -->
            <ScrollView Orientation="Horizontal" HeightRequest="100">
                <HorizontalStackLayout x:Name="imagePreviewStack" Spacing="10"/>
            </ScrollView>
            
            <Button Text="Evaluate"
                    Clicked="OnEvaluateClicked"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
            
            <!-- Evaluation ContentView, initially hidden -->
            <maui:EvaluationView x:Name="evaluationView" IsVisible="False" />

        </VerticalStackLayout>

    </Grid>
</ContentPage>
